{
  extends: [ '@borgar/eslint-config' ],
  parserOptions: {
    ecmaVersion: 2020,
    sourceType: 'module',
  },
  rules: {
    'import/export': 'error',
    'import/no-unresolved': 'error',
    'no-use-before-define': 'error'
  },
  globals: {
    require,
    module,
    exports
  },
  plugins: [
    'import'
  ]
}
