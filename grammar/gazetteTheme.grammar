gazetteHeaderNode
 extends abstractThemeHeaderNode
 javascript
  compile() {
   const file = this.parent.file
   const { SVGS, linkToPrevious, linkToNext } = file
   let previousButton = ""
   if (linkToPrevious)
    previousButton = `a <
    class gazettePrevPageLink
    href ${linkToPrevious}`
   let nextButton = ""
   if (linkToNext)
    nextButton = `a >
    class gazetteNextPageLink
    href ${linkToNext}`
   return file.compileStumpCode(`div
   class gazetteHeader doNotPrint
   ${previousButton}
   a ${SVGS.home}
    class gazetteTopLeftBarComponent
    href ${file.get("homeLink") || "index.html"}
   a ${SVGS.git}
    class gazetteTopRightBarComponent
    href ${file.git}
   ${nextButton}`)
  }
gazetteFooterNode
 extends abstractThemeFooterNode
 javascript
  compile() {
   const file = this.parent.file
   const { SVGS, SCROLL_VERSION, viewSourceUrl } = file
   const closeContainerTag = "</div>"
   return (
    closeContainerTag +
    file.compileStumpCode(`p
   class viewSourceNode doNotPrint
   a View source
    href ${viewSourceUrl}
  div
   class gazetteFooter doNotPrint
   a ${SVGS.email}
    href mailto:${file.email}
   a ${SVGS.git}
    href ${file.git}
   a Built with Scroll v${SCROLL_VERSION}
    href https://scroll.pub
    class gazetteScrollLink`)
   )
  }