 catchAllCellType textCell
 javascript
  isMarkupNode = true
  get pattern() {
    return this.getWordsFrom(1).join(" ")
  }
  getInserts(text) {
    const {pattern }= this
    const start = text.indexOf(pattern)
    if (start === -1)
      return false
    return [{index: start, string: `<${this.openTag}>`}, {index: start + pattern.length, string: `</${this.closeTag}>`}]
  }
  get openTag() {
    return this.tag
  }
  get closeTag() {
    return this.tag
  }
