 javascript
  getInserts() {
   const day = this.getContent() || this.getParent().getParent().get("date")
   if (!day) return false
   try {
    const dayjs = require("dayjs")
    return [{index: 0, string: `<span class="scrollArticleDateComponent">${dayjs(day).format(`MMMM D, YYYY`)} — </span>`}]
   } catch (err) {
    console.error(err)
    return false
   }
  }
