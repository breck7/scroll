 javascript
  toRow(columnCount) {
   const words = this.getWords()
   let str = ""
   let column = 0
   while (column < columnCount) {
    column++
    const content = columnCount === column ? words.slice(columnCount - 1).join(" ") : words[column - 1]
    const linkified = jtree.Utils.linkify(content)
    str += `<td>${linkified}</td>\n`
   }
   return str
  }
