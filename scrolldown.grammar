 javascript
  compile() {
   const src = this.getWord(1)
   const openA = `<a href="${src}" class="scrollImage" target="_blank">`
   try {
    const sizeOf = require("image-size")
    const dimensions = sizeOf(src)
    const width = dimensions.width
    const height = dimensions.height
    return `${openA}<img src="${src}" width="${width}" height="${height}" loading="lazy"/></a>`
   } catch (err) {
    console.error(err)
    return `${openA}<img src="${src}"></a>`
   }
  }
