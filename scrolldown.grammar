  get tableHeader() {
   const header = this.nodeAt(0)
   return header ? header.getWords().map(word => `<th>${word}</th>\n`) : []
  }
  getTableBody(columnCount) {
   return this.getTopDownArray()
    .slice(1)
    .map(node => `<tr>${node.toRow(columnCount)}</tr>`)
    .join("\n")
  }
